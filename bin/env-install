#!/bin/bash

pushd $HOME

dot=.dotfiles

# REFACTOR decide whether we take all (with an exclusion list) or use an explicit list
for f in .bashrc .bash_profile .bash_logout bin .dircolors .fonts .gvimrc .profile .vim .vimrc .tmux.conf
do
    if [ -e $f ]
    then
        rm -fr $f
    fi
    ln -s $dot/$f
done

# update git submodules
cd $dot
git submodule init
git submodule update

popd
